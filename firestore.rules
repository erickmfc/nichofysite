rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários autenticados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para pedidos de conteúdo
    match /contentRequests/{requestId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Regras para notificações
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Regras para preferências de conteúdo
    match /userPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para comunicação com admin
    match /chatMessages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    match /tickets/{ticketId} {
      allow read, write: if request.auth != null;
    }
    
    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para gamificação
    match /gamificationProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /userBadges/{badgeId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para configurações avançadas
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para histórico de pagamentos
    match /paymentHistory/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para métricas de conversão
    match /conversionMetrics/{metricId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para onboarding
    match /onboardingProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para atividade do usuário
    match /userActivity/{activityId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para performance de conteúdo
    match /contentPerformance/{performanceId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para transações de pontos de fidelidade
    match /loyaltyPointTransactions/{transactionId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para histórico de interações
    match /interactionHistory/{interactionId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para preferências de serviço
    match /servicePreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para coleção de teste (apenas para desenvolvimento)
    match /test/{testId} {
      allow read, write: if request.auth != null;
    }
    
    // Regra padrão - negar acesso a documentos não especificados
    match /{document=**} {
      allow read, write: if false;
    }
  }
}