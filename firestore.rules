rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para pedidos (orders)
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
      allow create: if true; // Permitir criação sem autenticação para formulários públicos
    }
    
    // Regras para usuários (users)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para conteúdo (content)
    match /content/{contentId} {
      allow read: if true; // Conteúdo público para leitura
      allow write: if request.auth != null;
    }
    
    // Regras para configurações (settings)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regras para nichos (nichos)
    match /nichos/{nichoId} {
      allow read: if true; // Nichos públicos
      allow write: if request.auth != null;
    }
    
    // Regras para projetos (projects)
    match /projects/{projectId} {
      allow read: if true; // Projetos públicos
      allow write: if request.auth != null;
    }
  }
}
