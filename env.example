# Configurações de Segurança - NichoFy
# Copie este arquivo para .env.local e configure suas credenciais

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Admin Credentials (HASHED)
ADMIN_EMAIL=admin@nichofy.com
ADMIN_PASSWORD_HASH=$2b$10$your_bcrypt_hash_here
MODERATOR_EMAIL=moderator@nichofy.com
MODERATOR_PASSWORD_HASH=$2b$10$your_bcrypt_hash_here

# Security Settings
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (se necessário)
GEMINI_API_KEY=your_gemini_api_key_here
PAYMENT_API_KEY=your_payment_api_key_here
